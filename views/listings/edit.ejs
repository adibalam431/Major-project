<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<div class="row mt-3">
    <div class="col-8 offset-2 ">
        <h3>Update Listing</h3>
        <form method="POST" action="/listings/<%= found._id %>/edit?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

            <div class="mb-3">
                <lable for="title" class="form-lebel">Title</lable>
                <input name="list[title]" value="<%=found.title%>" type="text" class="form-control" required />
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <lable for="description" class="form-lable">Description</lable>
                <textarea name="list[description]" class="form-control"><%=found.description%></textarea>
            </div>
<div class="img">
    <img src="<%=orgImg%>" style="height: 50rempx; width:10rem;">
</div>
            <div class="mb-3">
                <lable for="image" class="form-lable">New Image</lable>
                <input name="list[image]" type="file" class="form-control"  />
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-lable">price</label>
                    <input name="list[price]" value="<%=found.price%>" type="number" class="form-control" required />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please choose a username.
                    </div>
                </div>

                <div class="mb-3 col-md-8">
                    <lable for="country" class="form-lable">country</lable>
                    <input name="list[country]" value="<%=found.country%>" type="text" class="form-control" required />
                </div>
            </div>

            <div class="mb-3">
                <lable for="location" class="form-lable">Location</lable>
                <input name="list[location]" value="<%=found.location%>" type="text" class="form-control" required />
            </div>

            <button class="btn btn-dark add-btn mt-3">Update</button>
        </form>



    </div>
    <script src="/js/script.js"></script>
</div>